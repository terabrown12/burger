$ = require('jquery')
Delegate = require('./delegate')
eventBus = $({})

class Events
  on: (args...) ->
    eventBus.on(args...)

  off: (args...) ->
    eventBus.off(args...)

  once: (args...) ->
    eventBus.one(args...)

  emit: (args...) ->
    eventBus.trigger(args...)

module.exports = Events
