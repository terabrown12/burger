jest
  .autoMockOff()

$ = require('jquery')
Component = require('../component')
findChildren = require('../services/find-children')

class Stub extends Component
  @register()

class OtherStub extends Component
  @register()

element =
  $("""
    <div>
      <div data-burger="Stub"></div>
      <div data-burger="OtherStub"></div>
    </div>
  """)

describe 'findChildren', ->
  it 'returns an array of children', ->
    children = findChildren(element)

    expect(children[0].name).toEqual('Stub')
    expect(children[1].name).toEqual('OtherStub')
